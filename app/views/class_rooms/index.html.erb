<p style="color: green"><%= notice %></p>

<% content_for :title, "Class rooms" %>

<h1>Class rooms</h1>

<table>
  <thead>
    <tr>
      <th>numero_classe</th>
      <th>professeur_id</th>
      <th>cours_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_rooms.each do |class_room| %>
      <tr>
        <td><%= class_room.numero_classe %></td>
        <td><%= class_room.professeur_id %></td>
        <td><%= class_room.cours_id %></td>
        <td><%= link_to 'Show', class_room %></td>
        <td><%= link_to 'Edit', edit_class_room_path(class_room) %></td>
        <td><%= link_to 'Destroy', class_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New class room", new_class_room_path %>
