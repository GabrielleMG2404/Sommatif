<p style="color: green"><%= notice %></p>

<% content_for :title, "Inscriptions" %>

<h1>Inscriptions</h1>

<table>
  <thead>
    <tr>
      <th>Date_inscription</th>
      <th>Student_id</th>
      <th>Paiement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inscriptions.each do |inscription| %>
      <tr>
        <td><%= inscription.date_inscription %></td>
        <td><%= inscription.student_id %></td>
        <td><%= inscription.paiement %></td>
        <td><%= link_to 'Show', inscription %></td>
        <td><%= link_to 'Edit', edit_inscription_path(inscription) %></td>
        <td><%= link_to 'Destroy', inscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New inscription", new_inscription_path %>
