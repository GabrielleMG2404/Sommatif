<p style="color: green"><%= notice %></p>

<% content_for :title, "Evaluations" %>

<h1>Evaluations</h1>

<table>
  <thead>
    <tr>
      <th>date_evaluation</th>
      <th>numero_eval</th>
      <th>materiel</th>
      <th>notes</th>
      <th>professeur_id</th>
      <th>student_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.date_evaluation %></td>
        <td><%= evaluation.numero_eval %></td>
        <td><%= evaluation.materiel %></td>
        <td><%= evaluation.notes %></td>
        <td><%= evaluation.professeur_id %></td>
        <td><%= evaluation.student_id %></td>
        <td><%= link_to 'Show', evaluation %></td>
        <td><%= link_to 'Edit', edit_evaluation_path(evaluation) %></td>
        <td><%= link_to 'Destroy', evaluation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New evaluation", new_evaluation_path %>
